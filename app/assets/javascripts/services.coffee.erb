'use strict'

app = angular.module('attachments.services', [ 'ngResource' ])

app.service( 'EventSource', [ ->
  new EventSource('/streaming/events')
])

app.factory( 'API', [
  '$resource',
  ($resource) ->
    sync: $resource('/sync.json')
    emails: $resource(
		    '/emails.json',
            {},
		    'get':
			    method:'GET'
			    isArray: true
		    )
    me: $resource('/me.json')
])