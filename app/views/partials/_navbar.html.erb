<header id="header" class="pagewidth">
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_path %>">@ttachments.io</a>
      </div>
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul id="main-nav" class="nav navbar-nav navbar-right">
          <li><a href="http://attachments.io/pricing/">Pricing</a></li>
          <li><a href="http://attachments.io/blog/">Blog</a></li>
          <li><a href="http://attachments.io/about-us/">About Us</a></li>
          <% if user_signed_in? %>
              <li class="dropdown<%= ' profile-image' unless current_user.picture.empty? %>">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <% unless current_user.picture.empty? %>
                      <img src="<%= current_user.picture %>" class="img-circle navbar-profile-img">
                  <% end %>
                  <%= "#{current_user.first_name} #{current_user.last_name}" %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to profile_path do %>
                      <i class="glyphicon glyphicon-user"></i>
                      Home
                    <% end %>
                    <%= link_to user_settings_path do %>
                      <i class="glyphicon glyphicon-cog"></i>
                      Settings
                    <% end %>
                    <%= link_to sign_out_path do %>
                      <i class="glyphicon glyphicon-log-out"></i>
                      Sign out
                    <% end %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  Sign In / Sign Out
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to 'Google Account', sign_in_google_path %>
                    <%= link_to 'Google Apps', sign_in_apps_path %>
                  </li>
                </ul>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

